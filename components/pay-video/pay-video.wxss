page{
    background: #fff;
}
.text-ellipsis{
    overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;  word-break: break-all;
  }
.info-count{
    display: flex;
    justify-content: space-between;
    color: #999;
    font-size: 24rpx;
    line-height: 24rpx;
    padding: 30rpx 0;
}
/* 视频列表区域 */
.video-item{
    box-sizing: border-box;
    overflow: hidden;
    margin: 0 30rpx;
}
.video-info{
    font-size: 34rpx;
    color: #000;
    line-height: 42rpx;
    padding-bottom: 20rpx;
    padding-top: 30rpx; 
}
.video-content{
    overflow: hidden;
    position: relative;
    width: 690rpx;
    height:410rpx;
    border-radius: 8rpx;
}
.model-img{
    width: 690rpx;
    height:410rpx;
    border-radius: 8rpx;
}
.video{
    width: 100%;
    height:100%;
}
.cover{
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 40;
    border-radius: 8rpx;
}
.mask-img{ background: rgba(0,0,0,0.5); position: absolute; top: 0; left: 0;  width:100%; height: 100%;}
.play-icon{ position: absolute; z-index: 2; top: 50%; left: 50%; width: 93rpx; height: 93rpx; margin-left: -60rpx; margin-top: -46rpx; background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/player.png) no-repeat center center; background-size: 100% 100%; }
.label{
    position: absolute;
    top:8rpx;
    left:8rpx;
    color: #fff;
    background: rgba(255,96,0,0.8);
    font-size: 22rpx;
    line-height: 32rpx;
    height: 32rpx;
    padding: 0 15rpx;
    border-radius: 6rpx;
    text-align: center;
    z-index: 41;
}
.noList{
    text-align: center;
    margin-top: 280rpx;
    color: #888;
    font-size: 28rpx;
}
.noList image{
    width:100%;
    height:280rpx;
    margin:0 auto;
}
.hide{ display: none !important; }