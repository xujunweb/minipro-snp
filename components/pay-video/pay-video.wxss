.text-ellipsis{
    overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;  word-break: break-all;
  }
.info-count{
    display: flex;
    justify-content: space-between;
    color: #999;
    font-size: 24rpx;
    line-height: 24rpx;
    padding: 30rpx 0;
}
/* 视频列表区域 */
.video-item{
  background: #fff;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0 30rpx;
  padding-bottom: 20rpx;
  /* border-bottom: 20rpx solid rgb(223, 215, 215); */
  margin-bottom: 20rpx;
}
.video-info{
    font-size: 34rpx;
    color: #000;
    line-height: 42rpx;
    padding-bottom: 20rpx;
}
.userInfo{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.userInfo .info{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userInfo .info .name{
  font-size: 26rpx;
}
.userInfo .info .follow{
  display: inline-block;color: #9da3f1;border-radius: 50rpx;
  padding: 2rpx 15rpx;font-size: 24rpx;margin-left: 10rpx;border: 2rpx solid #9da3f1;
}
.userInfo .info .type{
  font-size: 24rpx;color: #999;
}
.item_originLogo {
  height:80rpx;
  width:80rpx;
  border-radius:80rpx;
  margin-right:15rpx;
  flex-shrink:0;
}

.video-content{
    overflow: hidden;
    position: relative;
    width: 690rpx;
    height:410rpx;
    border-radius: 8rpx;
    margin-bottom: 15rpx;
}
.model-img{
    width: 690rpx;
    height:410rpx;
    border-radius: 8rpx;
}
.video{
    width: 100%;
    height:100%;
}
.cover{
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 40;
    border-radius: 8rpx;
}
.mask-img{ background: rgba(0,0,0,0.5); position: absolute; top: 0; left: 0;  width:100%; height: 100%;}
.play-icon{ position: absolute; z-index: 2; top: 50%; left: 50%; width: 93rpx; height: 93rpx; margin-left: -60rpx; margin-top: -46rpx; background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/player.png) no-repeat center center; background-size: 100% 100%; }
.label{
    position: absolute;
    top:8rpx;
    left:8rpx;
    color: #fff;
    background: rgba(255,96,0,0.8);
    font-size: 22rpx;
    line-height: 32rpx;
    height: 32rpx;
    padding: 0 15rpx;
    border-radius: 6rpx;
    text-align: center;
    z-index: 41;
}
.noList{
    text-align: center;
    margin-top: 280rpx;
    color: #888;
    font-size: 28rpx;
}
.noList image{
    width:100%;
    height:280rpx;
    margin:0 auto;
}
.hide{ display: none !important; }


.item_share{font-size: 28rpx; color: #9da3f1; height: 50rpx; width: 100rpx; line-height: 48rpx; border: 1px solid #9da3f1; border-radius: 35rpx; padding:0; margin: 0; background: #fff; }
.item_share::after, .item_share::before{ border: none; }

