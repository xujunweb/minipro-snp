/* components/audio-item/audio-item.wxss */
.audio-item{
  background: #fff;padding: 30rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.top{
  display: flex;
  justify-content: space-between;
}
.userinfo{
  display: flex;
}
.userinfo image{
  width: 80rpx;height: 80rpx;border-radius: 80rpx;
  margin-right: 20rpx;
}
.userinfo .usertype{
  color: #999;font-size: 26rpx;margin-top: 5rpx;
}
.time{
  font-size: 26rpx;color: #999;
}
.title{
  font-size: 30rpx;margin-top: 15rpx;margin-bottom: 15rpx;
}